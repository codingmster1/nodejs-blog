<div class="author">
    <div class="typewriter">
    <h1 class="author__heading">“Greetings...”</h1>
</div>
<p class="author__body">― H.P. Lovecraft</p>
</div>

<img src="/img/lovecraft.gif" width="581" height="428" alt="H.P. Lovecraft author sitting down" class="hero-image">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

<% data.forEach(post => { %>
    <ul class="article-ul">
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString(); %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
   
</section>